
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      // This is the most reliable way to check for a specific admin user
      // with Email/Password authentication.
      return request.auth.token.email == 'admindevaura22@gmail.com';
    }

    // Public collections that anyone can read
    match /showcase/{showcaseId} {
      allow read, list: if true;
      allow write: if request.auth != null && isAdmin();
    }
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
     match /skills/{skillId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
    match /hardware/{hardwareId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Sub-collections with specific read access for enrolled users
    match /courses/{courseId}/classDetails/details {
      allow get: if (request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(courseId))) || (request.auth != null && isAdmin());
      allow write: if request.auth != null && isAdmin();
    }

    match /skills/{skillId}/classDetails/details {
      allow get: if (request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(skillId))) || (request.auth != null && isAdmin());
      allow write: if request.auth != null && isAdmin();
    }

    // User-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Admin-only collections (privates collection is no longer needed)
    match /privates/{userId} {
        allow read, write: if false; // This collection is deprecated
    }

    // Website requests can be created by anyone, but only managed by admins
    match /website_requests/{requestId} {
       allow read, write: if request.auth != null && isAdmin();
       allow create: if true;
    }

    // Promo codes can only be managed by admins
    match /promo_codes/{codeId}/{document=**} {
       allow read, write: if request.auth != null && isAdmin();
    }
  }
}
