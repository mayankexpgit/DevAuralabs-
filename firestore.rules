
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Public collections that anyone can read
    match /showcase/{showcaseId} {
      allow read: if true;
      allow write: if false; // Nobody can write to showcase from the client
    }
    match /courses/{courseId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }
     match /skills/{skillId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }
    match /hardware/{hardwareId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Sub-collections with specific read access
    match /courses/{courseId}/classDetails/details {
      allow get: if request.auth != null && (get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin' || exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments?courseId=${courseId}));
      allow write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }

    match /skills/{skillId}/classDetails/details {
      allow get: if request.auth != null && (get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin' || exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments?skillId=${skillId}));
      allow write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }

    // User-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Admin-only collections
    match /privates/{userId} {
        allow read, write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }
    match /website_requests/{requestId} {
       allow read, write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
       allow create: if true;
    }
    match /promo_codes/{codeId}/{document=**} {
       allow read, write: if get(/databases/$(database)/documents/privates/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
