
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/privates/$(userId));
    }

    match /showcase/{showcaseId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }
     match /skills/{skillId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }
    match /hardware/{hardwareId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }
    
    match /courses/{courseId}/classDetails/details {
      allow get: if (request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(courseId))) || isAdmin(request.auth.uid);
      allow write: if isAdmin(request.auth.uid);
    }

    match /skills/{skillId}/classDetails/details {
      allow get: if (request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(skillId))) || isAdmin(request.auth.uid);
      allow write: if isAdmin(request.auth.uid);
    }

    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId || isAdmin(request.auth.uid);
    }
    
    match /privates/{userId} {
        allow read, write: if isAdmin(request.auth.uid);
    }
    match /website_requests/{requestId} {
       allow read, write: if isAdmin(request.auth.uid);
       allow create: if true;
    }
    match /promo_codes/{codeId}/{document=**} {
       allow read, write: if isAdmin(request.auth.uid);
    }
  }
}
