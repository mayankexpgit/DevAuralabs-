
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      // An admin user has a document in the /privates collection.
      return exists(/databases/$(database)/documents/privates/$(request.auth.uid));
    }

    match /showcase/{showcaseId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }
    match /courses/{courseId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }
     match /skills/{skillId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }
    match /hardware/{hardwareId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /courses/{courseId}/classDetails/details {
      allow get: if (request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(courseId))) || isAdmin();
      allow write: if isAdmin();
    }

    match /skills/{skillId}/classDetails/details {
      allow get: if (request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(skillId))) || isAdmin();
      allow write: if isAdmin();
    }

    // User-specific data
    match /users/{userId} {
      allow list: if isAdmin();
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      match /{document=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }
    
    match /privates/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /website_requests/{requestId} {
       allow read, write, list: if isAdmin();
       allow create: if true;
    }
    
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, list, update: if isAdmin();
    }

    match /promo_codes/{codeId}/{document=**} {
       allow read, write: if isAdmin();
    }
  }
}
